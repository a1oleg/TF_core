@using TF_core.Models


<style>
    .custom {
        font-size: x-large;
    }

    .team {
        min-height: 600px;
        background-repeat: no-repeat;
        background-position: center center;
    }

    .yourback {
        background-image: url(../Pictures/yourteam.png);
    }

    .poolback {
        background-image: url(../Pictures/VS.png);
    }

    .enemyback {
        background-image: url(../Pictures/enemyteam.png);
    }

    .textgreen {
        color: green;
    }

    .textred {
        color: red;
    }
</style>

@if (User.Identities.First().IsAuthenticated)
{
    <div class="row">
        <div class="col-md-4 team textgreen @MainModel.Friendly.Count <=2 ? "yourback":"")">
            @Html.Partial("_TeamPartial", Model.Yourteam)
        </div>

        @if (Model.Pool != null)
        {
            <div class="col-md-4">
                @Html.Partial("_PoolPartial", Model)
            </div>
        }
        else if (Model.Pool == null)
        {
            <div class="col-md-4 team poolback">
                <h3>teams completed!</h3>
                <h3>Results will be send on your e - mail</h3>
            </div>
        }

        <div class="col-md-4 team textred @(MainModel.Enemy.Count <=2 ? "enemyback":"")">
            @Html.Partial("_TeamPartial", Model.Enemyteam)
        </div>

    </div>
}
else
{
    <div class="row custom">
        <div class="col-md-4 col-md-offset-4">@Html.ActionLink("Sign up", "SignUp", "Account", routeValues: null, htmlAttributes: new { id = "signUpLink" })</div>
        <div class="col-md-4">@Html.ActionLink("Sign in", "SignIn", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</div>

    </div>
}